{
  "compilerOptions": {
    "baseUrl": "./src/ts",
    "outDir": "./dist",
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "jsx": "react"
  },
  "include": [
    "./src/ts/**/*"
  ]
}
